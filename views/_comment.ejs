<li id="comment-<%= comment._id %>" class="comment-list">
    <p>
        <% if(locals.localuser && (locals.localuser.id == comment.user.id || locals.localuser.id == post.user.id)) {%>

            <small>
                <a class="delete-comment-button" href="/comments/destroy/<%= comment.id %>">X</a>
            </small>
            <%}%>
        <%= comment.content %>
        <br>
        <small>
            <%= comment.user.name %>
        </small>
    </p>    
</li>